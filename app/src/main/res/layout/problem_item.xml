<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <TextView
        android:text="Título"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/titleText"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />


    <TextView
        android:layout_below="@+id/titleText"
        android:id="@+id/autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="Autor con apellido"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:text="Descripción corta de la misión - Descripción corta de la misiónfdsfdndsffdnsfnfdsanfndndmfsnfndsnfdnfdsnfdnfdsnafnmdsmnfndsfndnsandsfnfadsnfnmdsn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titleText"
        android:layout_alignStart="@+id/titleText"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_below="@id/autor"
        android:layout_marginTop="3dp"
        android:id="@+id/disasterTypeText"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
/>



    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/no_response"
        android:layout_below="@+id/disasterTypeText"
        android:layout_alignLeft="@+id/disasterTypeText"
        android:layout_alignStart="@+id/disasterTypeText" />


    <TextView
        android:id="@+id/respuestas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sin respuestas"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_below="@+id/disasterTypeText"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"/>




</RelativeLayout>