<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cl.citiaps.coordinaciondevoluntarios.activity.MissionsActivity">

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/recruitMissionListView"
        android:layout_height="match_parent"
        android:layout_below="@+id/progressMissions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:divider="@color/colorPrimaryDark"
        android:dividerHeight="1dp"/>

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressMissions"
        android:visibility="gone" />

    <TextView
        android:text="@string/noproblem_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progressMissions"
        android:layout_centerHorizontal="true"
        android:id="@+id/emptyMissionText"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:visibility="gone" />

</RelativeLayout>
