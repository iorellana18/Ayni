<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/ic_logo_voluntarios"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Seleccione sus habilidades"
        android:id="@+id/textView3"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/cellContainer"
        android:layout_below="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/gray_light">

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/emergencyContainer"
        android:layout_below="@+id/cellContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/gray_light">

    </android.support.design.widget.TextInputLayout>




    <ListView
        android:layout_marginTop="10dp"
        android:layout_below="@id/textView3"
        android:id="@+id/lista_habilidades"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>




    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:id="@+id/progressLogin"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/terminar"
        style="@style/mainButton"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:text="Terminar" />




</RelativeLayout>